{
  "name": "i18njs",
  "version": "2.0.1",
  "description": "A simple i18n for Javascript with a templating feature.",
  "main": "i18njs.js",
  "scripts": {
    "postinstall": "npm run-script umd && npm run-script uglify",
    "posttest": "npm run-script format && npm run-script lint",
    "preversion": "npm run-script build",
    "postversion": "node ./src/postversion.js",
    "build": "npm test && npm run-script changelog && npm run-script umd && npm run-script uglify",
    "test": "mocha",
    "format": "jscs ./src/i18n.js ./test/i18njs.spec.js",
    "lint": "eslint ./src/i18n.js ./test/i18njs.spec.js",
    "umd": "umd i18njs ./src/i18n.js i18njs.js",
    "changelog": "node ./src/changelog.js",
    "uglify": "uglifyjs i18njs.js -o i18njs.min.js -c -m"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yoannmoinet/i18njs.git"
  },
  "keywords": [
    "i18n",
    "translation",
    "template"
  ],
  "author": "Yoann Moinet <yoann.moinet@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yoannmoinet/i18njs/issues"
  },
  "homepage": "https://github.com/yoannmoinet/i18njs",
  "devDependencies": {
    "conventional-changelog": "0.2.1",
    "eslint": "^0.24.1",
    "expect.js": "^0.3.1",
    "jscs": "^1.13.1",
    "mocha": "^2.2.5",
    "uglify-js": "^2.4.24",
    "umd": "^3.0.1"
  }
}
